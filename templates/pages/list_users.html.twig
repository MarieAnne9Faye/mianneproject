{% extends 'base.html.twig' %}
{% block body %}
{% include 'main/index.html.twig' %}
<div class="home_content">
    <div class="container">
        <div class="content">
            <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Age</th>
                    <th scope="col">Classe</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="myline">
                        <th scope="row">{{ user.id }}</th>
                        <td>{{user.prenom}}</td>
                        <td>{{user.nom}}</td>
                        <td>{{user.age}}</td>
                        <td>{{user.classe}}</td>
                        <td>
                            <button class="btn" style="color:red;">
                                <a href="{{ path('supprimer', {'id': user.id}) }}">
                                    <i class='bx bx-trash'></i>
                                </a>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
              </table>
            <div class="navigation text-center">
             {{ knp_pagination_render(users)}}
            </div>

        </div>
    </div>  
</div>
{% endblock %}